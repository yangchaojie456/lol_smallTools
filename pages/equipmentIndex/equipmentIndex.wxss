.equipment-index-home{
  width: 100%;
  height: 100vh;
  background-size: cover;
  background-position: top center;
  background-image: url('https://lol.personal-tailor.vip/images/bg.jpg');
  padding:10rpx;
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
}
.equipment-index-items{
  width: 240rpx;
  background: rgba(12, 19, 20, 0.5);
  color: #2a5f5a;  
}
.equipment-index-map>view{
  padding-left: 10rpx;
}
.equipment-index-items-content checkbox-group>view{
  padding-left: 10rpx;
}
.equipment-index-items-content>view{
  line-height: 40rpx;
}
.equipment-index-items-title{
  font-size: 28rpx;
  color:#736a43;
  margin-top: 15rpx;
}
.equipment-index-items-checkbox{
  padding-right: 10rpx;
}
.noMarginTop{
  margin-top: 0!important;
}
.currentItem,.currentMap{
  background: linear-gradient(to right, #164242, #111f1e);
  color:#7de9c2!important;
}
.currentTag{
  color:#7de9c2!important;
}

.equipment-index-list{
  width: 480rpx;
  background: rgba(12, 19, 20, 0.5);
  font-size: 24rpx;
}
.equipment-index-list-item{
  border:2rpx solid #29271d;
  width: 221rpx;
  height: 90rpx;
  margin: 10rpx;
  padding: 6rpx;
  color:white;
}
.equipment-index-list-item image{
  float: left;
}
.equipment-index-list-item-title{
  font-size: 24rpx;
  white-space: nowrap;
  overflow: auto;
}
.equipment-index-list-item-gold text{
  font-size: 20rpx;
  color:#736a43;
}
.equipment-index-list-item-gold{
  font-size: 24rpx;
  color:white;
}
.equipment-index-list-item image{
  width: 60rpx;
  height: 60rpx;
  border:2rpx solid #5d5139;
  margin-right: 10rpx;
}
.equipment-index-list-content{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}
checkbox-group label{
  display: inline-block;
  width: 100%;
}
checkbox-group .equipment-index-items-checkbox checkbox{
  float: right;
}
/*  重写 checkbox 样式  */
/* 未选中的 背景样式 */
checkbox .wx-checkbox-input{
   border-radius: 0;/* 圆角 */
   width: 20rpx; /* 背景的宽 */
   height: 20rpx; /* 背景的高 */
   margin-bottom: 6rpx;
   border: 2rpx solid #62573c;
   background: transparent;
}
.currentItem checkbox .wx-checkbox-input{
   border-radius: 0;/* 圆角 */
   width: 20rpx; /* 背景的宽 */
   height: 20rpx; /* 背景的高 */
   margin-bottom: 6rpx;
   border: 2rpx solid #62573c;
   background: #5f5325;
}

/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */
checkbox .wx-checkbox-input.wx-checkbox-input-checked{
   border: 2rpx solid #7c6128;   
   background: #f6de14;
}
/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
   border-radius: 50%;/* 圆角 */
   width: 40rpx;/* 选中后对勾大小，不要超过背景的尺寸 */
   height: 40rpx;/* 选中后对勾大小，不要超过背景的尺寸 */
   line-height: 40rpx;
   text-align: center;
   font-size:30rpx; /* 对勾大小 30rpx */
   color:transparent; /* 对勾颜色 白色 */
   background: transparent;
   transform:translate(-50%, -50%) scale(1);
   -webkit-transform:translate(-50%, -50%) scale(1);
}

/* 禁用后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */
checkbox .wx-checkbox-input.wx-checkbox-input-disabled{
  border: 2rpx solid transparent;   
  background: transparent;
}
